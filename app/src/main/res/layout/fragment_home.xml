<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp">

        <TextView
            android:id="@+id/next_scheduled_homecare"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginTop="73dp"
            android:layout_marginBottom="51dp"
            android:padding="32dp"
            android:text="Seuraava hoitotoimenpide"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/X"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homecare_guide_list"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/X"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/x"
            app:layout_constraintBottom_toBottomOf="@+id/remove"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/remove"
            app:layout_constraintTop_toTopOf="@+id/remove" />

        <Button
            android:id="@+id/remove"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/minus"
            app:layout_constraintBottom_toBottomOf="@+id/add"
            app:layout_constraintEnd_toStartOf="@+id/X"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/add"
            app:layout_constraintTop_toTopOf="@+id/add"
            app:layout_constraintVertical_bias="0.765" />

        <Button
            android:id="@+id/add"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="98dp"
            android:layout_marginBottom="107dp"
            android:background="@drawable/plus"
            app:layout_constraintBottom_toTopOf="@+id/names"
            app:layout_constraintEnd_toStartOf="@+id/remove"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/next_scheduled_homecare" />

        <TextView
            android:id="@+id/names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Jere Lampola, Ville Kumpulainen, Johanna Väisälä, Minji Choi"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <ListView
            android:id="@+id/homecare_guide_list"
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:layout_marginTop="112dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>